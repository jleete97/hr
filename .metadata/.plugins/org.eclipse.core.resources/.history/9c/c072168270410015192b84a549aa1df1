<script>
angular.module('employeeApp', [])
.controller('EmployeeCtrl', [function() {
	var self = this;
	self.allowEdit = false;

	self.submit = function() {
		
	};
	self.reset = function() {
		
	};

	self.readonly = function() {
		return !allowEdit;
	}
	self.setEdit = function(edit) {
		self.allowEdit = edit;
	};
}]);
</script>

