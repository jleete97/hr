<!DOCTYPE html>
<html ng-app="employeeApp">
<head>
	<title>Employee</title>
	<link rel="stylesheet" type="text/css" href="css/hr.css">
	<link rel="stylesheet" type="text/css" href="css/employee.css">
	<meta charset="utf-8">
</head>

<body ng-controller="EmployeesCtrl as ctrl">

<header><span>HR System - Employees</span></header>

<div class="employee">
	<table class="emp_list_table">
		<tr>
			<th>Type</th>
			<th>Title</th>
			<th>Name</th>
		</tr>

		<tr ng-repeat="emp in ctrl.employees">
			<td>{{emp.type}}</td>
			<td>{{emp.title}}</td>
			<td>{{emp.lastname}}, {{emp.firstname}}</td>
		</tr>
	</table>
</div>

<script src="js/angular.js"></script>
<script src="js/jquery-1.11.3.js"></script>
<script>
angular.module('employeeApp', [])
.controller('EmployeesCtrl', [function() {
	var self = this;
	var employees = [
	     			{
	    				id: 1,
	    				firstname: "Alice",
	    				lastname: "Smith",
	    				title: "Dr.",
	    				type: "RF"
	    			},
	    			{
	    				id: 2,
	    				firstname: "Bob",
	    				lastname: "Washington",
	    				title: "Mr.",
	    				type: "RF"
	    			},
	    			{
	    				id: 3,
	    				firstname: "Carol",
	    				lastname: "Mendoza",
	    				title: "Dr.",
	    				type: "PM"
	    			}
	  ];
	self.setEdit = function(allowEdit) {
		if (allowEdit) {
			$("input").removeAttr("disabled");
			$("select").removeAttr("disabled");
			$("#emp_buttons_edit").show();
			$("#emp_buttons_noedit").hide();
		} else {
			$("input").attr("disabled", "disabled");
			$("select").attr("disabled", "disabled");
			$("#emp_buttons_edit").hide();
			$("#emp_buttons_noedit").show();
		}
	};
	self.setEdit(false);
	self.employee = employees[0];
}]);
</script>

</body>
</html>